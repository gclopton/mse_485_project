# pair_zbl_overlay.in — add a ZBL overlay below 1.5 Å
# Requires pair_ceo2_buck.in to have run FIRST (for Buckingham coeffs).
# Switch to hybrid/overlay and re-apply Buckingham coeffs, then add ZBL coeffs.

# Switch to hybrid/overlay
pair_style   hybrid/overlay buck/coul/long 12.0 zbl 0.5 1.5
pair_modify  mix arithmetic

# Re-apply Buckingham coeffs under hybrid/overlay:
# (These lines must include the style name buck/coul/long.)
include inputs/lammps/includes/params/ceo2_buck_hybrid.params

# ZBL atomic numbers
pair_coeff 1 1 zbl 58 58
pair_coeff 1 2 zbl 58  8
pair_coeff 2 2 zbl  8  8
